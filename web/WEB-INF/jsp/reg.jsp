    <script>

        //this is the ajax to dynamically check the user name.
        function userNameCheck() {
            $.ajax({
                type: 'get',
                url: 'userNameCheck',
                data: {'userName': $('#userName').val()},
                async: true,
                dataType: 'text',
                success: function (succ) {
